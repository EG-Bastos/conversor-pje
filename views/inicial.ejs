<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <title>Conversor PJe</title>
</head>
<body>
    <div class="pessoal">
        <form action="/" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="arquivo">Carregue seu arquivo: </label>
                <input type="file" name='arquivo' class="form-control-file-lg" required><br>
                <label for="">Selecione os dígitos desejados: </label>
                <div class="digitos">
                    <div class="digito-grupo">
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="0" name="0" value="0">
                            <label for="1">0</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="1" name="1" value="1">
                            <label for="1">1</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="2" name="2" value="2">
                            <label for="1">2</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="3" name="3" value="3">
                            <label for="1">3</label><br>
                        </div>
                    </div>
                    <div class="digito-grupo">
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="4" name="4" value="4">
                            <label for="1">4</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="5" name="5" value="5">
                            <label for="1">5</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="6" name="6" value="6">
                            <label for="1">6</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="7" name="7" value="7">
                            <label for="1">7</label><br>
                        </div>
                    </div>
                    <div class="digito-grupo">
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="8" name="8" value="8">
                            <label for="1">8</label><br>
                        </div>
                        <div class="par">
                            <input class="digito-input" type="checkbox" id="9" name="9" value="9">
                            <label for="1">9</label><br>
                        </div>
                    </div>
                </div>
                <button type="submit" onclick="buttonHandler()">Enviar</button>
            </div>
        </form>

        <script>
            const resultado = document.querySelectorAll(".digito-input")
        
            function buttonHandler() {
                let count = 0
                for (let index = 0; index < resultado.length; index++) {
                    const element = resultado[index];
                    if (element.checked === true) {
                        count += 1
                    }
                }

                if (count === 0) {
                    alert("Escolha ao menos um dígito!!!")
                }
            }
        </script>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
</body>
</html>